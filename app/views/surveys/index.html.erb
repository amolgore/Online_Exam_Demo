<p id="notice"><%= notice %></p>

<h1>Listing Exams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
         <tr id = <%=survey.id%>> 
            <td><%= survey.name %></td>
            <td><%= link_to 'Show', survey %></td>
            <% if can? :update, @article %>
              <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
            <% end %>
            <% if can? :update, @article %>
              <td><%= link_to 'Destroy', "#",data: {id: survey.id}, class: 'survey_destroy' %></td>
            <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :update, @article %>
  <%= link_to 'New Survey', new_survey_path %>
<% end %>